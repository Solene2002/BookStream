{% extends 'base.html.twig' %}

{% block title %}Mon Compte{% endblock %}

{% block body %}
{% form_theme form 'bootstrap_5_layout.html.twig' %}

<h3>Mon Compte</h3>
{{form_start(form)}}
    {{form_row(form.username,{'label':'Nom d\'utilisateur','attr':{'placeholder':'Nom d\'utilisateur ...'}})}}
    {{form_row(form.email,{'label':'Email utilisateur','attr':{'placeholder':'Email utilisateur ...'}})}}
    {{form_row(form.adresse,{'attr':{'placeholder':"Adressse Auteur"},'label':'Adressse'})}}
    {{ form_row(form.bornAt,{'attr':{'placeholder':"Date naissance Auteur"},'label':'Date naissance'}) }}
    {{form_row(form.fichierimage)}}
    <button type="submit" class="btn btn-success">Modifier !</button>   
{{form_end(form)}}
    <br>
  <img width="33%" src="{{asset(get_env('CHEMIN_IMAGES_USERS'))}}/{{app.user.image}}" alt="">

{% endblock %}